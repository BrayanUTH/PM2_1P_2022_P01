<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2_1P_2022_P01.MainPage"
             BackgroundImageSource="background_image.jpg"
             >

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nombre" FontSize="Title" Padding="30,10,30,10" TextColor="White"/>
        <Entry Placeholder="Nombre" Keyboard="Text" x:Name="txtNombre" Margin="30,10,30,10" TextColor="White" BackgroundColor="#2196F3"/>

        <Label Text="Edad" FontSize="Title" Padding="30,10,30,10" TextColor="White"/>
        <Entry Placeholder="Edad" Keyboard="Telephone" x:Name="txtEdad" Margin="30,10,30,10" TextColor="White" BackgroundColor="#2196F3"/>

        <Button Text="Mostrar" x:Name="btnMostrar" Margin="10,0,10,0" Clicked="btnMostrar_Clicked"/>
        <Button Text="Segunda Pagina" x:Name="btnPagina" Margin="10,0,10,0" Clicked="btnPagina_Clicked"/>
    </StackLayout>

</ContentPage>
